<!DOCTYPE html>
<html>

<head>
    <style>
        table,
        th,
        td {
            border: 1px solid black;
            border-collapse: collapse;
        }
        
        h2 {
            text-align: center;
        }
        
        .table-data {
            border: 1px solid transparent;
            border-right: 1px solid;
            text-align: right;
        }
    </style>
</head>

<body>
    <div>
        <h2>Invoice</h2>
        <h4>Invoice Name:<%= data.name %></h4>
        <h4>Invoice Number:<%= data.invoiceNumber %></h4>
    </div>
    <table style="width:100%">
        <tr>
            <th>Sr #</th>
            <th>Description</th>
            <th>Quality</th>
            <th>Unit</th>
            <th>Rate</th>
            <th>Amount</th>
        </tr>
         <% for(var i=0; i<data.invoiceList.length; i++) {%>
        <tr>
            <td><%=i+1%></td>
            <td><%=data.invoiceList[i].name%></td>
            <td><%=data.invoiceList[i].quantity%></td>
            <td><%=data.invoiceList[i].unit%></td>
            <td><%=data.invoiceList[i].rate%></td>
            <td><%=data.invoiceList[i].amount%></td>
        </tr>
        <%}%>
        <tr>
            <td colspan="5" class="table-data">Sub Total</td>
            <td><%=data.subTotal%></td>
        </tr>
         <% for(var i=0; i<data.tax.length; i++) {%>
        <tr>
            <td colspan="5" class="table-data"><%=data.tax[i].name%> @ <%=data.tax[i].percent%>%</td>
            <td><%=data.tax[i].amount%></td>
        </tr>
        <%}%>
        <tr>
            <td colspan="5" class="table-data">Rounding Off </td>
            <td>-<%=data.roundOff%></td>
        </tr>
        <tr>
            <td colspan="5" class="table-data">Grand Total</td>
            <td><%=data.grandTotal%></td>
        </tr>
    </table>
</body>

</html>
</body>

</html>
