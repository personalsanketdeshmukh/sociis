		<div style="padding:0;margin:0">
			<div style="margin:0 auto">
				<div style="float:right">
					<img src="<%= realHost %>/img/logo.png" style="width:150px">
				</div>
				<div>
					<%=assignment.company.name%>,<br>
						<div style="width:190px;font-family: Roboto, sans-serif;">
							<p>
								<%=assignment.branch.name%>,<br>
									<% if(assignment.office) { %>
										<%=assignment.office.address%>,<br>
											<%=assignment.office.city.name%>,
												<%=assignment.office.city.district.state.name%>.<br> Phone #:
													<%=assignment.office.phone%><br> FAX #:
														<%=assignment.office.fax%>
															<% } %>
							</p>
						</div>
				</div>
				<p style="margin:20px 0;text-align:right;text-decoration:underline;font-family: Roboto, sans-serif;">WITHOUT PREJUDICE</p>


				<h5 style="float:right;font-family: Roboto, sans-serif;">Date :
					<%= makeIstDate(data.authTimestamp,"D-MMM-YYYY") %>

				</h5>
				<h4 style="float:left;font-family: Roboto, sans-serif;">Immediate Loss Advice #
					<%=assignment.name%>
				</h4>

				<div class="clearfix"></div>
				<div>
					<table class="table" style="width:100%;font-family: Roboto, sans-serif;">
						<tbody>
							<% for(var i=0; i<data.forms.length; i++) {%>
								<% if(i==0){%>
									<tr>
										<th colspan="2" style="text-align:left;font-family: Roboto, sans-serif;" class="upper">
											<%= i+1 %>
												<%= data.forms[i].name %>
										</th>
									</tr>
									<%}else{%>
										<tr>
											<th style="height:20px;" colspan="2">

											</th>
										</tr>
										<tr>
											<th colspan="2" style="text-align:left;font-family: Roboto, sans-serif;" class="upper">
												<%= i+1 %>
													<%= data.forms[i].name %>
											</th>
										</tr>
										<%}%>
											<% for(var j=0; j<data.forms[i].items.length; j++) {%>
												<tr>
													<td style="width:30%;font-family: Roboto, sans-serif;" class="cap">
														<%=i+1%>.
															<%=j+1%>
																<i><%= data.forms[i].items[j].name %></i>
													</td>
													<% if(data.forms[i].items[j].type=="Custom Input") {  %>

														<%if(data.forms[i].items[j].value=="WYSIWYG"){%>
															<td style="width:70%;font-family: Roboto, sans-serif;" class="cap">
																<%- data.forms[i].items[j].field %>
															</td>
															<%}else if(data.forms[i].items[j].value=="Currency"){%>
																<td style="width:70%;font-family: Roboto, sans-serif;" class="cap">
																	<%= makeItCurrency(data.forms[i].items[j].field) %>
																</td>
																<% } else if(data.forms[i].items[j].value=="Textarea"){%>
																	<td style="width:70%;font-family: Roboto, sans-serif;">
																		<%= data.forms[i].items[j].field %>
																	</td>
																	<%} else{%>
																		<td style="width:70%;font-family: Roboto, sans-serif;" class="cap">
																			<%= data.forms[i].items[j].field %>
																		</td>
																		<%}%>



																			<%} else if(data.forms[i].items[j].type=="Dropdown") {  %>
																				<td style="width:70%;font-family: Roboto, sans-serif;" class="cap">
																					<%= data.forms[i].items[j].field %>
																				</td>

																				<% }else{%>
																					<td style="width:70%;font-family: Roboto, sans-serif;" class="cap">
																						<%= getAssignmentTemplateValue(data.forms[i].items[j].value,assignment) %>
																					</td>
																					<% }%>
												</tr>
												<% } %>
													<% } %>


						</tbody>
					</table>
				</div>
				<p>Sincerely,</p>
				<p class="subject">For,
					<%=assignment.company.name%>
				</p><br><br><br>
				<p class="size" style="margin-top: 10px;margin-bottom: 0;text-align: left;font-family: Roboto, sans-serif;"> Authorized Signatory</p>

			</div>

		</div>



		<div id='pageFooter' style='border-top: 1px solid;padding-top: 5px;font-family: Roboto, sans-serif;'>
			<div class='bt-foot'>
				<div style=float:left;font-family: Roboto, sans-serif; '><%=assignment.company.name%></div>
<div style='float:right;font-family: Roboto, sans-serif; '>Page {{page}} of {{pages}}</div>
<div style='text-align:center;text-align: center;position: absolute;margin: 0 auto;width: 100%;font-family: Roboto, sans-serif; '>Assignment # <%= assignment.name %></div></div>

</body>

</html>